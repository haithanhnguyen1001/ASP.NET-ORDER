@model Supplier
@{
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="post">
            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                <input type="text" class="form-control" name="@nameof(Model.SupplierName)" value="@Model.SupplierName" />
                @Html.ValidationMessage(nameof(Model.SupplierName))
            </div>
            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input type="text" class="form-control" name="@nameof(Model.ContactName)" value="@Model.ContactName" />
                @Html.ValidationMessage(nameof(Model.ContactName))
            </div>
            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone" />
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input type="text" class="form-control" name="@nameof(Model.Email)" value="@Model.Email" />
            </div>
            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control" name="@nameof(Model.Address)" value="@Model.Address" />
            </div>
            <div class="form-group">
                <label>Tỉnh/thành:</label>
                <select class="form-control" name="@nameof(Model.Province)">
                    <option value="">-- Chọn Tỉnh/thành</option>
                    @foreach (var province in CommonDataService.ListOfProvinces())
                    {
                        if (province.ProvinceName == Model.Province)
                        {
                            <option value="@province.ProvinceName" selected>@province.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@province.ProvinceName">@province.ProvinceName</option>

                        }
                    }
                </select>
                @Html.ValidationMessageFor(m => m.Province)
            </div>
            <div class="form-group">
                <label>Ảnh:</label>
                <input type="text" class="form-control" name="@nameof(Model.Logo)" value="@Model.Logo" />
                <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                       onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="~/images/employees/@Model.Logo" class="img img-bordered" style="width:200px" alt="NoPhoto" />
                </div>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>

        </form>
    </div>
</div>