@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <form id="formShipping" action="~/Order/Shipping" method="post">
            <input type="hidden" name="id" value="@ViewBag.OrderID" />

            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Chuyển giao hàng cho đơn hàng</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label">Người giao hàng:</label>
                    <select class="form-control" name="shipperID">
                        <option value="0">-- Chọn hãng giao hàng</option>
                        @foreach (var shipper in CommonDataService.ListOfShippers())
                        {
                            <option value="@shipper.ShipperID">@shipper.ShipperName</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <span id="message" style="color:#f00"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Cập nhật
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Bỏ qua
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#formShipping').submit(function (e) {
            e.preventDefault();
            var url = $(this).attr("action");
            var method = $(this).attr("method");
            var data = $(this).serializeArray();
            $.ajax({
                url: url,
                type: method,
                data: data,
                error: function () {
                    alert("Your request is not valid!");
                },
                success: function (response) {
                    if (response !== "") {
                        $("#message").html(response);
                        alert(response);
                    } else {
                        location.reload();
                    }
                },
            });
            return;
        });
    });
</script>