@model Shipper
@{
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper/Save" method="post">
            <div class="form-group">
                <label>Tên người giao hàng:</label>
                <input type="text" class="form-control" name="@nameof(Model.ShipperName)" value="@Model.ShipperName" />
                @Html.ValidationMessage(nameof(Model.ShipperName))
            </div>
            
            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone" />
                @Html.ValidationMessage(nameof(Model.Phone))
            </div>
            
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Luu du lieu
                </button>
                <a href="~/Shipper" class="btn btn-default">
                    Quay lai
                </a>
            </div>

        </form>
    </div>
</div>
